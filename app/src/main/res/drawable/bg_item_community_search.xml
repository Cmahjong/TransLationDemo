<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="1dp">
        <shape>
            <solid android:color="#1a000000"/>
        </shape>
    </item>
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#0d2a2a2a"/>
        </shape>
    </item>
    <item>
        <ripple android:color="?attr/colorPrimaryDark">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="#000000"/>
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>